<% include ./partials/header.ejs %>
<div class="ui main text container segment">
    <div class="ui huge header"> <%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">  
            <img src="<%= blog.image %>" class="ui centered rounded image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                 <p><%- blog.body %></p>      
            </div> 
            <br></br>
            <a href="/blogs/<%=blog._id%>/edit" class="ui basic blue button">Edit</a>
            <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" id="delete">
                <button class="ui basic red button">Delete</button>
            </form>
        </div>
    </div>
</div>


<% include ./partials/footer.ejs %>